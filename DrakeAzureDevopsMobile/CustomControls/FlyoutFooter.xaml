<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DrakeAzureDevopsMobile.CustomControls.FlyoutFooter"
             xmlns:viewmodel="clr-namespace:DrakeAzureDevopsMobile.ViewModels"
             HeightRequest="75">
    
    
    <VerticalStackLayout>
        <Label 
            Text="Sign Out"
            VerticalOptions="Center" 
            HorizontalOptions="StartAndExpand"
            Margin="50,20,30,45"
            Style="{StaticResource OneDrakeTextLargePrimaryStyle}">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding SignOutCommand}"/>
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</ContentView>